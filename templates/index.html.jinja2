{% extends "base.html.jinja2" %}

{% block head_end %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.min.css"
  integrity="sha512-h9FcoyWjHcOcmEVkxOfTLnmZFWIH0iZhZT1H2TbOq55xssQGEJHEaIm+PgoUaZbRvQTNTluNOEfb1ZRy6D3BOw=="
  crossorigin="anonymous" referrerpolicy="no-referrer" />
{% endblock %}

{% block content %}
<nav class="navbar position-absolute w-100 navbar-expand-lg navbar-dark border-bottom border-white bg-dark"
  style="z-index: 10000">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <img src="/assets/images/logo.png" alt="Logo Tuinfeest" width="56" height="56"
        class="d-inline-block align-text-top" />
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
      <div class="navbar-nav text-uppercase fw-bold">
        <a class="nav-link" href="#tf-about">Over tuinfeest</a>
        {% if show_timetable %}
        <a class="nav-link" href="#tf-timetable">Time table</a>
        {% endif %}
        {% if show_artists %}
        <a class="nav-link" href="#tf-artists">Artiesten</a>
        {% endif %}
        {% if show_sponsors %}
        <a class="nav-link" href="#tf-partners">Sponsors</a>
        {% endif %}
        <a class="nav-link" href="#tf-map">Waar?</a>
        <a class="nav-link" href="/huisreglement">Huisreglement</a>
      </div>
    </div>
  </div>
</nav>

<!-- Carousel -->
{% include "index_components/carousel.html.jinja2" %}


<!-- About -->
{% include "index_components/about.html.jinja2" %}


<!-- Timetable -->
{% if show_timetable %}
{% include "index_components/timetable.html.jinja2" %}
{% endif %}


<!-- Artists -->
{% if show_artists %}
{% include "index_components/artists.html.jinja2" %}
{% endif %}


<!-- Sponsors -->
{% if show_sponsors %}
{% include "index_components/sponsors.html.jinja2" %}
{% endif %}


<!-- Info -->
{% include "index_components/info.html.jinja2" %}


<!-- Map -->
<div id="tf-map" style="height: 550px; width: 100%"></div>
{% endblock %}


<!-- Body end -->
{% block body_end %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.min.js"
  integrity="sha512-puJW3E/qXDqYp9IfhAI54BJEaWIfloJ7JWs7OeD5i6ruC9JZL1gERT1wjtwXFlh7CjE7ZJ+/vcRZRkIYIb6p4g=="
  crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="assets/js/clock.js" defer></script>
<script src="assets/js/map.js" defer></script>
{% endblock %}
